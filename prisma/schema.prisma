// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define o modelo de usuário com permissões de ADM e usuários padrão
model Environment {
  id           Int           @id @default(autoincrement())
  name         String
  description  String?
  categories   Category[]    @relation("CategoriesInEnvironment")
  transactions Transaction[]
  users        User[]
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  password      String
  isAdmin       Boolean?      @default(false)
  Image         String?
  transactions  Transaction[]
  categories    Category[]
  Environment   Environment?  @relation(fields: [environmentId], references: [id])
  environmentId Int?
}

// Define o modelo de transação
model Transaction {
  id            Int         @id @default(autoincrement())
  description   String
  amount        Float
  date          DateTime
  dueDate       DateTime?
  category      Category    @relation(fields: [categoryId], references: [id])
  categoryId    Int
  environment   Environment @relation(fields: [environmentId], references: [id])
  environmentId Int
  File          File[]
  User          User?       @relation(fields: [userId], references: [id])
  userId        Int?
}

model File {
  id            Int         @id @default(autoincrement())
  path          String
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  transactionId Int
}

// Define o modelo de categoria para classificação de transações
model Category {
  id           Int           @id @default(autoincrement())
  name         String
  type         String        @default("Expense")
  environments Environment[] @relation("CategoriesInEnvironment")
  transactions Transaction[]
  User         User?         @relation(fields: [userId], references: [id])
  userId       Int?
}
